/* General Styling */
body {
    font-family: Arial, sans-serif;
    background: #1a1e26; /* Dark background */
    color: #f4f4f4; /* Light text */
    margin: 0;
    padding: 0;
    transition: background 0.3s ease, color 0.3s ease;
}

/* Header */
header {
    background-color: #23252b;
    color: #f4f4f4;
    text-align: center;
    padding: 20px;
    font-size: 1.8rem;
    font-weight: bold;
}

/* Main Content */
main {
    padding: 20px;
}

/* Section Headers */
section h2 {
    border-bottom: 2px solid #444;
    padding-bottom: 5px;
    margin-bottom: 15px;
    color: #00d8ff; /* Highlight color */
}

/* Chat Section */
#maia-chat-popup {
    background: #23252b; /* Dark grey */
    color: #f4f4f4; /* Light text */
    border: 1px solid #444;
    border-radius: 8px;
    padding: 10px;
}

.chat-log {
    background: #1a1e26;
    color: #f4f4f4;
    border: 1px solid #444;
    border-radius: 8px;
    height: 200px;
    overflow-y: auto;
    padding: 10px;
    margin-bottom: 10px;
}

.chat-log div {
    padding: 5px;
    margin-bottom: 5px;
    border-radius: 4px;
}

.chat-log .user-message {
    background: #00d8ff;
    color: #23252b;
    align-self: flex-end;
}

.chat-log .maia-message {
    background: #2b2e35;
    color: #f4f4f4;
    align-self: flex-start;
}

/* Input Fields */
input[type="text"],
input[type="file"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #444;
    border-radius: 4px;
    background: #2b2e35;
    color: #f4f4f4;
}

/* Buttons */
button {
    background: #00d8ff;
    color: #23252b;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.3s ease, transform 0.2s ease;
}

button:hover {
    background: #007bb5;
    transform: scale(1.05);
}

/* Visualization Output */
#visualization-output {
    background: #1a1e26;
    color: #f4f4f4;
    border: 1px solid #444;
    border-radius: 8px;
    padding: 10px;
    height: 200px;
    overflow-y: auto;
}

/* Gallery */
#gallery-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
    padding: 10px;
}

#gallery-container img {
    max-width: 100%;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

#gallery-container img:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.9);
}

/* Footer */
footer {
    background: #23252b;
    color: #f4f4f4;
    text-align: center;
    padding: 20px;
    font-size: 0.9rem;
}
